#!/usr/bin/bash
delete_one_row(){
    echo 'enter your column number :'
    read -r number_
    if  [[  ! $number_ =~ ^[0-9]+$ ]] ;
    then
    echo "error"
    else
    sed -i "$number_ d" $tname
    fi
}

delete_from_to(){
    echo 'enter your start number :'
    read -r num_start
    echo 'enter your end number :'
    read -r num_end
    if  [[ ! $num_start =~ ^[0-9]+$ ]] ;
    then
    echo "error"
    elif  [[ ! $num_end =~ ^[0-9]+$ ]] ;
    then
    echo "error"
    else
    sed -i "$num_start,$num_end d" $tname
    fi
}



fun_delete_from_table(){
    
    ls $pwd

     echo "enter your table name "
      read -r tname

    if  ! [ -e $tname ] ;then
                                     
        echo 'table doesn't exist '
    else
       echo "enter your option "

     select option in delete_one_row delete_from_to 
     
      case $option in 
        
            1 )
              delete_one_row ;;

            2 ) 
              delete_from_to ;;

            *) echo "wrong choice :" ;;

      esac 
   fi  
}
    
        







}


