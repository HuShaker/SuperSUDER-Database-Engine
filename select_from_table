#!/bin/bash
select_all_table () {
    cd ./Data/shereen

    ls -F |grep -v 'metadata' 
    echo -e "Enter the name of the table you want to select from : \c"
    read tname
  
    if [[ -f ${tname} ]]; then
        cat ${tname}
    else
        echo "Error displaying table $tname"
    fi
}
select_all_table

